@inherits LayoutComponentBase
@inject ISessionService _sessionService


<MudThemeProvider /> @* Required for theme support *@
<MudPopoverProvider /> @* Needed for MudBlazor popovers *@
<MudDialogProvider /> @* Needed for MudBlazor dialogs *@
<MudSnackbarProvider /> @* Needed for MudBlazor snackbars *@

<div class="page">
    
    @if (_sessionService.IsLoggedIn())
    {
        <div class="sidebar">
            <NavMenu />
        </div>
        
    }
    

    <main>
        

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
